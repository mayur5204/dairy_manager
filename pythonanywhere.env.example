# PythonAnywhere Environment Configuration Template
# Copy this file to .env and fill in the actual values
PYTHONANYWHERE=True
DJANGO_SECRET_KEY=your_secret_key_here
DJANGO_DEBUG=False

# Security settings - all set to True for PythonAnywhere
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_SECURE=True
DJANGO_SECURE_HSTS_SECONDS=True
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_ALLOWED_HOSTS=yourusername.pythonanywhere.com

# Database credentials - replace with your actual password and username
DATABASE_PASSWORD=your_database_password
DATABASE_URL=mysql://yourusername:your_database_password@yourusername.mysql.pythonanywhere-services.com/yourusername$dairy_manager